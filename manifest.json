{
  "name": "Tatrrace",
  "manifest_version": 2,
  "version": "0.1.3",
  "description" :"Aktualny podgląd na warunki pogodowe w Tatrach w nowej zakładce",
  "author": "Jarek Pelczynski",

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "chrome_url_overrides": {
    "newtab": "page.html"
  },

  "permissions": [
    "http://www.test.tatrynet.pl/*",
    "http://tpn.pl/*",
    "http://kamery.topr.pl/*"
  ],

  "content_security_policy": "script-src 'self' https://connect.facebook.net/en_US/ 'unsafe-eval'; object-src 'self'"


}
